{
    "name": "approvio-team/approvio",
    "description": "Ein webbasiertes, quelloffenes Antragssystem für Fördervereine",
    "type": "project",
    "license": "GPL-3.0-only",
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "Approvio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Approvio\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=5",
        "phpcs": "phpcs --standard=PSR12 src tests",
        "phpcbf": "phpcbf --standard=PSR12 src tests",
        "phpmd": "phpmd src,tests text phpmd.xml",
        "ci": [
            "@phpcs",
            "@phpstan",
            "@phpmd",
            "@test"
        ]
    }
}
